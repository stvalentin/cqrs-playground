{
    "require": {
        "php": "^7.2",
        "doctrine/orm": "^2.6",
        "ramsey/uuid": "^3.7",
        "robmorgan/phinx": "^0.10.6",
        "symfony/flex": "^1.1"
    },
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin",
        "sort-packages": true
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5"
    },
    "autoload": {
        "psr-4": {
            "LoanApplication\\": "src/LoanApplication/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Integration\\": "tests/Integration",
            "Tests\\Unit\\": "tests/Unit",
            "Tests\\Mocks\\": "tests/Mocks"
        }
    }
}
